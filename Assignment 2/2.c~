#include<stdlib.h>
#include<stdio.h>
#include<unistd.h>

int main()
{
	int pid;
	 
    pid = fork(); 
  
    
    printf(""
    
    
    if ( pid > 0){
    	
    	 // in parent process 
    	printf("Parent Process is going to Sleep Forking %d \n" , getpid());	
    	sleep(5);
    	printf("Parent Process After Sleep Parent Id %d \n" , getpid());	 
    
    } 
        	
    else if( pid == 0 ) {
    
		//Child Process
		printf("After Forking %d  \n" , getppid());
		sleep(5);
		printf("After Forking %d  \n" , getpid());
    
    }       
	
	
	return 0;

}

